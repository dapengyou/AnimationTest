<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.animationtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fragment_animation.FragmentAnimationActivity" />
        <activity android:name=".tween_animation.TweenAnimationActivity" />
        <activity android:name=".property_animation.PropertyAnimationActivity" />
        <activity android:name=".tween_animation.TranslateAnimationActivity" />
        <activity android:name=".tween_animation.ScaleAnimationActivity" />
        <activity android:name=".tween_animation.RotateAnimationActivity" />
        <activity android:name=".tween_animation.AlphaAnimationActivity" />
        <activity android:name=".tween_animation.GroupAnimationActivity" />
        <activity android:name=".tween_animation.ChangeActivity" />
        <activity android:name=".property_animation.ValueAnimatorActivity" />
        <activity android:name=".property_animation.ObjectAnimatorActivity" />
        <activity android:name=".property_animation.ValueObjectActivity"></activity>
    </application>

</manifest>